<canvas class="cax-canvas" bindtouchstart="touchStart" bindtouchmove="touchMove" bindtouchend="touchEnd" canvas-id="{{ id }}" style="width: {{width}}px; height: {{height}}px;z-index:1">
  <slot></slot>
</canvas>
<canvas bindtouchstart="touchStart" bindtouchmove="touchMove" bindtouchend="touchEnd" class="cax-canvas-hit" canvas-id="{{id}}Hit" style='width:1px;height:1px;display: none;'></canvas>
<canvas bindtouchstart="touchStart" bindtouchmove="touchMove" bindtouchend="touchEnd" class="cax-canvas-measure" canvas-id="measure{{index}}" style='width:1px;height:1px;display: none;'></canvas>
